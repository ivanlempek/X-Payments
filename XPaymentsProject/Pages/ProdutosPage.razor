@page "/produtos"
@inject IProdutoApplicationService ProdutoService

<h3>Produtos</h3>

@if (produtos == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <div class="row">
        @foreach (var produto in produtos)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@produto.Foto" class="card-img-top" alt="@produto.Nome">
                    <div class="card-body">
                        <h5 class="card-title">@produto.Nome</h5>
                        <p class="card-text">@produto.Descricao</p>
                        <p class="card-text"><small class="text-muted">Garantia: @produto.Garantia meses</small></p>
                    </div>
                    <div class="card-footer">
                        <a href="#" class="btn btn-primary">Detalhes</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <button>Cadastrar novo Produto</button>
}

@code {
    private List<Produto>? produtos;

    protected override async Task OnInitializedAsync()
    {
        produtos = await ProdutoService.GetAllProdutos();
    }
}